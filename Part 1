<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Silly Story Generator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 20px;
        }
        button {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h1>Silly Story Generator</h1>
    
    <label for="customName">Enter a name:</label>
    <input type="text" id="customName" placeholder="Enter a name">
    
    <p>
        <label><input type="radio" name="unit" id="us" checked> US</label>
        <label><input type="radio" name="unit" id="uk"> UK</label>
    </p>
    
    <button id="generate">Generate Story</button>
    <p id="story"></p>

    <script src="main.js"></script> <!-- Link to external JavaScript -->
</body>
</html>

// Selecting the elements from the DOM
const customName = document.getElementById("customName");
const randomize = document.getElementById("generate");
const story = document.getElementById("story");

// Arrays to hold random story elements
const insertX = ['Tommy', 'Linda', 'Sam', 'Alex', 'Charlie'];
const insertY = ['a dog', 'a cat', 'a monkey', 'a robot', 'an alien'];
const insertZ = ['to the moon', 'to the beach', 'to the store', 'to the park', 'to the zoo'];

// A function to return a random item from an array
function randomValueFromArray(array) {
    const randomIndex = Math.floor(Math.random() * array.length);
    return array[randomIndex];
}

// The main story text template
let storyText = "Once upon a time, :insertx: saw :inserty: and decided to take it :insertz:. It was a crazy adventure!";

// Event listener for generating the story
randomize.addEventListener("click", result);

// Function to generate and display the silly story
function result() {
    let newStory = storyText;
    const xItem = randomValueFromArray(insertX);
    const yItem = randomValueFromArray(insertY);
    const zItem = randomValueFromArray(insertZ);

    // Replacing placeholders in the story
    newStory = newStory.replace(":insertx:", xItem);
    newStory = newStory.replace(":inserty:", yItem);
    newStory = newStory.replace(":insertz:", zItem);

    // If custom name is provided, replace 'Tommy' with custom name
    if (customName.value) {
        const name = customName.value;
        newStory = newStory.replace(xItem, name); // Replace random name with custom name
    }

    // If UK is selected, convert US measurements (optional logic for weight/temperature conversion)
    if (document.getElementById("uk").checked) {
        let weight = "300 pounds"; // Default weight in pounds
        let temperature = "94 fahrenheit"; // Default temperature in Fahrenheit

        // Convert pounds to stones and fahrenheit to centigrade
        const weightInStones = Math.round(300 / 14) + " stone";
        const tempInCentigrade = Math.round((94 - 32) * 5 / 9) + " centigrade";

        // Replace the default weight and temperature with UK units
        newStory = newStory.replace(weight, weightInStones);
        newStory = newStory.replace(temperature, tempInCentigrade);
    }

    // Display the generated story
    story.textContent = newStory;
}
