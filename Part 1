A JavaScript-based story generator that creates a funny random story based on user input.
-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Silly Story Generator</title>
    <style>
        body {
            font-family: Verdana, sans-serif;
            text-align: center;
            padding: 20px;
        }
        button {
            margin-top: 15px;
            padding: 8px 12px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Silly Story Generator</h1>
    <label for="customName">Enter a name:</label>
    <input type="text" id="customName" placeholder="Type a name">
    <br>
    <button id="generate">Create Story</button>
    <p id="story"></p>

    <script>
        document.getElementById('generate').addEventListener('click', generateStory);

        function generateStory() {
            const nameInput = document.getElementById('customName').value.trim();
            const story = document.getElementById('story');
            
            let userName = nameInput || 'Charlie';
            let locations = ["a haunted house", "a carnival", "a spaceship"];
            let actions = ["danced like a robot", "sang opera", "did a magic trick"];
            let weather = ["stormy", "foggy", "windy"];
            
            let randomPlace = locations[Math.floor(Math.random() * locations.length)];
            let randomAction = actions[Math.floor(Math.random() * actions.length)];
            let randomWeather = weather[Math.floor(Math.random() * weather.length)];
            
            let storyText = `Yesterday, ${userName} visited ${randomPlace}. The weather was ${randomWeather}. Suddenly, ${userName} ${randomAction}, leaving everyone amazed!`;
            
            story.textContent = storyText;
        }
    </script>
</body>
</html>
